{
  "imports": {
    "@deco/actors": "jsr:@deco/actors@^0.3.2"
  },
  "tasks": {
    "start": "deno run -A --unstable-kv main.ts"
  },
  "githooks": {
    "pre-commit": "check"
  },
  "exclude": [
    "node_modules",
    "static/",
    "README.md",
    "_fresh",
    "**/_fresh/*",
    ".deco/**"
  ],
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "fmt": {
    "files": {
      "exclude": [
        "static/",
        "README.md"
      ]
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "nodeModulesDir": false
}